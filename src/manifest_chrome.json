{
	"manifest_version": 3,
	"name": "__MSG_extensionName__",
	"description": "__MSG_extensionDescription__",
	"version": "3.24.2",
	"default_locale": "en",
	"icons": {
		"64": "icon64.png"
	},

	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},

	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["content.js"],
			"run_at": "document_start"
		}
	],

	"web_accessible_resources": [{
		"resources": [
			"modules/*",
			"experimental.html"
		],
		"matches": ["*://*/*"]
	}],

	"background": {
		"service_worker": "background.js",
		"type": "module"
	},

	"host_permissions": [
		"*://*/*"
	],

	"permissions": [
		"storage",
		"tabs",
		"scripting",
		"activeTab",
		"sessions",
		"declarativeNetRequest"
	],

	"optional_permissions": [
		"clipboardRead",
		"clipboardWrite"
	]
}

