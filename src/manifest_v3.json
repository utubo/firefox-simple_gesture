{
	"manifest_version": 3,
	"name": "__MSG_extensionName__",
	"description": "__MSG_extensionDescription__",
	"version": "3.16.1",
	"default_locale": "en",
	"icons": {
		"64": "icon64.png"
	},

	"browser_specific_settings": {
		"gecko": {
			"id": "simple_gesture@utb.dip.jp",
			"strict_min_version": "119.0"
		},
		"gecko_android": {
			"strict_min_version": "119.0"
		}
	},

	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},

	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["content.js"],
			"run_at": "document_start"
		}
	],

	"background": {
		"scripts": ["background.js"]
	},

	"host_permissions": [
		"*://*/*"
	],

	"permissions": [
		"storage",
		"tabs",
		"scripting",
		"activeTab",
		"sessions",
		"clipboardRead",
		"webRequest",
		"webRequestBlocking"
	]
}

